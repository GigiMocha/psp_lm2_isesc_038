//Program to add two numbers using a user defined function 'add'
#include <stdio.h>
int add(int a, int b);
int main ()
{
int num1, num2, sum;
printf ("Enter two numbers to be added: \n");
scanf ("%d %d",&num1, &num2);
sum = add(num1,num2);
printf("Sum = %d", sum);
return 0;
}
int add(int a,int b)
{
int result;
result = a+b;
return result;
}
